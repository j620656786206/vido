{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "tags": ["type:app", "platform:go"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/api/main ./cmd/api",
        "cwd": "apps/api"
      },
      "outputs": ["{workspaceRoot}/dist/apps/api"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "GIN_MODE=debug go run ./cmd/api/main.go",
        "cwd": "apps/api"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./... -v",
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go vet ./...",
        "cwd": "apps/api"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go fmt ./...",
        "cwd": "apps/api"
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "apps/api"
      }
    }
  }
}
